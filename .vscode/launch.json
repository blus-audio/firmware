    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./build/blus_mini_firmware.elf",
            "svdFile": "STM32F401.svd",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "external",
            "preLaunchTask": "Launch OpenOCD",
            "gdbTarget": "${env:WSL2_HOST_IP}:3333",
            "preLaunchCommands": [
                "monitor arm semihosting enable",
            ],
        }
    ]
}
