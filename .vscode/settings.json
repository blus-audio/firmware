{
    "pre-commit-helper.runOnSave": "fixes",
    "editor.formatOnSave": false,
    "files.associations": {
        "*.h": "c",
        "*.c": "c"
    },
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.dep": true,
        "**/build": true
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
    "makefile.configurations": [
        {
            "name": "defaultConfig",
            "makeArgs": [
                "-j"
            ],
            "problemMatchers": [
                "$gcc"
            ],
        }
    ]
}
